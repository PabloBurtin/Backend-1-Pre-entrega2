<div class="card" style="width: 18rem;">
  <img src="{{this.thumbnail}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h3 class="card-title">{{product.title}}</h3>
    <p class="card-text">{{product.description}}</p>
    <p class="card-text">{{product.category}}</p>
    <h5 class="card-title">Precio: ${{product.price}}</h5>
    <form action="/api/carts/placeholderCartId/products/{{product._id}}" method="POST">
        <button type="submit" class="btn btn-primary">Agregar al carrito</button>
    </form>
    <a href="/products" class="btn btn-primary">Volver al listado</a>
  </div>
</div>